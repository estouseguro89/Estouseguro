<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main_header_selector"
    android:gravity="center"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingRight="50dp"
    android:paddingBottom="10dp"
    android:paddingLeft="50dp"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:divider="@drawable/empty_tall_divider"
            android:showDividers="middle">

            <TextView
                android:id="@+id/ic_anjo"
                android:layout_width="200px"
                android:layout_height="250px"
                android:background="@drawable/ic_anjo" />
            <TextView
                android:id="@+id/text_anjo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ANJO DA GUARDA"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/text_cpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF"
                android:textColor="#ADCCD1"
                android:layout_gravity="left"
                android:textSize="14dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cpfinputlayout">

                <EditText
                    android:id="@+id/cpfinput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/login_input"
                    android:inputType="number"
                    android:singleLine="true"
                    android:gravity="center" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/text_senha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Senha"
                android:textColor="#ADCCD1"
                android:layout_gravity="left"
                android:textSize="14dp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/senhainputlayout">

                <EditText
                    android:id="@+id/senhainput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/login_input"
                    android:inputType="textPassword"
                    android:gravity="center" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/button_conectar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CONECTAR"
                android:textColor="#01C7CA"
                android:background="@drawable/login_conectar_button"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/button_cadastrar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="CADASTRAR"
                android:textColor="#01C7CA"
                android:background="@drawable/login_cadastrar_button"
                android:textSize="15dp"/>

        </LinearLayout>

</LinearLayout>